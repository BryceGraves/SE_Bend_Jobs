<style type="text/css">
table,
td {
  border: 1px solid black;
  text-align: center;
}
thead {
  font-weight: bold;
}

</style>

<%= link_to "All Businesses", businesses_path %>
<%= link_to "All Jobs", jobs_path %>
<table>
  <thead>
    <tr>
      <th colspan="6">All businesses</th>
    </tr>
    <tr>
    <td>Business Name</td>
    <td>Business Type</td>
    <td>Available Jobs</td>
    <td>Average Pay</td>
    <td>View Business</td>
    <td>Add</td>
    </tr>
  </thead>
  <tbody>
    <%@businesses.each do |business|%>
      <tr>
        <td class="name"><%= business.name %></td>
        <td class="business-type"><%= business.business_type %></td>
        <td class="available-jobs"><%= business.available_jobs.count %></td>    
        <td class="average-salary"><%= business.average_pay %></td>    
        <td>
          <%= link_to "View #{business.name}", business_path(:id => business.id), id: "view-business-#{business.name}" %>
        </td>
        <td>
          <%= link_to "Add Job", new_business_job_path(:business_id => business.id), id: "add-job-#{business.name}" %>
        </td> 
      </tr> 
    <%end%>
  </tbody>
</table>
<%= link_to "Add New Business", new_business_path %>
