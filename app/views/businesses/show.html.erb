<h1><%= @business.name %></h1>
<br>
<h2>Jobs</h2>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Description</td>
      <td>Pay</td>
      <td>Availabilty</td>
    </tr>
  </thead>
  <tbody>
    <% @business.jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.pay %></td>
        <td><%= job.available %></td>
      </tr>
    <% end %>
  </tbody>
</table>