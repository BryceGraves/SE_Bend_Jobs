<h1><%= @business.name %></h1>
<%= link_to "<button>BACK TO BUSINESSES</button>".html_safe, businesses_path %>
<%= link_to '<button id="add-job" type="button">Add Job</button>'.html_safe, new_job_path(:business_id => @business.id) %>

<br>
<h2>Jobs</h2>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Description</td>
      <td>Pay</td>
      <td>Availabilty</td>
    </tr>
  </thead>
  <tbody>
    <% @business.jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.pay %></td>
        <td><%= job.available %></td>
      </tr>
    <% end %>
  </tbody>
</table>