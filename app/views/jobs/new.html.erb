<h2>Add a Job</h2>
<%= form_for(@job) do |j| %>
  <%= j.label(:title) %>
  <%= j.text_field(:title) %>
  <%= j.label(:description) %>
  <%= j.text_field(:description) %>
  <%= j.label(:pay)%>
  <%= j.text_field(:pay) %>
  <%= j.label(:availability)%>
  <select name="availability" id="availability">
    <option value="true">available</option>
    <option value="false">unavailable</option>
  </select>
  <%= hidden_field_tag 'business_id', @business_id %>
  <%= j.submit %>
<% end %>

<%if @job.errors.any? %>
  <div id="errors">
    <h2>Sorry the job couldn't be created. Please try again.</h2>
    <h3>Job not created because:</h3>
    <ul>
      <% @job.errors.messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
