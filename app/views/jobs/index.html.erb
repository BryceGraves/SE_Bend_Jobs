<style type="text/css">
table,
td {
  border: 1px solid black;
  text-align: center;
}
thead {
  font-weight: bold;
}
</style>

<table>
  <thead>
    <tr>
      <th colspan="6">All Jobs</th>
    </tr>
    <tr>
      <td>Title</td>
      <td>Description</td>
      <td>Pay</td>
      <td>Availabilty</td>
      <td>Business</td>
      <td>View Business</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.pay %></td>
        <td><%= job.available %></td>
        <td><%= job.business.name %></td>
        <td><%= link_to "View #{job.business.name}", business_path(:id => job.business.id) %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "See All Businesses", businesses_path %>
